<?xml version="1.0" encoding="utf-8" ?>
 <Shell xmlns="http://xamarin.com/schemas/2014/forms"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              x:Class="StopWatch_App.MainPage"
             xmlns:bind="clr-namespace:StopWatch_App"
              BackgroundColor="Black">
     <TabBar>
         <Tab Title="Clock">
             <ShellContent ContentTemplate="{DataTemplate bind:DigitalClock}"/>
         </Tab>
         <Tab Title="StopWatch">
             <ShellContent ContentTemplate="{DataTemplate bind:StopWatch}"/>
         </Tab>
         <Tab Title="Timer">
             <ShellContent ContentTemplate="{DataTemplate bind:Clock}"/>
         </Tab>       
     </TabBar>    
 </Shell>